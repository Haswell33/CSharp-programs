<Window x:Class="WpfApp1.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AdminPanel" Height="450" Width="800">
    <Grid>
        <Grid Background="#FFE2E2E2" Margin="5" Height="30" VerticalAlignment="Top">
            <Button Name="button_create_user" Content="Create new user" HorizontalAlignment="Left" VerticalAlignment="Top" Width="113" Height="30" Background="#FFA1A1A1"/>

        </Grid>
        <ScrollViewer Name="scroll_name" Margin="0,45,0,0" >
            <Grid Name="allUsers" Background="#FFE2E2E2" Margin="5,0,0,0"/>
        </ScrollViewer>
    </Grid>
</Window>
